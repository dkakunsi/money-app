{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "account",
  "title": "Money Account",
  "description": "Account is place to contain money either savings or cash",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 36
        }
      ]
    },
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "type": {
      "type": "string",
      "enum": [
        "Cash",
        "Bank",
        "E-Wallet"
      ]
    },
    "themeColor": {
      "type": "string",
      "maxLength": 8
    },
    "balance": {
      "type": "number"
    },
    "isDeleted": {
      "type": "boolean"
    },
    "user": {
      "type": "string",
      "maxLength": 100,
      "$comment": "Reference to User ID",
      "reference": {
        "schema": "user"
      }
    },
    "createdDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "createdBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "lastUpdatedBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "required": [
    "name",
    "user",
    "balance"
  ],
  "index": [
    {
      "field": "user",
      "unique": false
    }
  ]
}