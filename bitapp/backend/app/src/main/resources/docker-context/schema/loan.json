{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "loan",
  "title": "Money Loan definition",
  "description": "Loan is place to contain money that being borrowed or lended",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 36
        }
      ]
    },
    "title": {
      "type": "string",
      "maxLength": 100
    },
    "description": {
      "type": "string"
    },
    "amount": {
      "type": "number"
    },
    "remainingAmount": {
      "type": "number"
    },
    "partyName": {
      "type": "string"
    },
    "date": {
      "type": "number"
    },
    "time": {
      "type": "integer"
    },
    "type": {
      "type": "string",
      "enum": [
        "DEBT",
        "RECEIVABLE"
      ]
    },
    "isDeleted": {
      "type": "boolean"
    },
    "user": {
      "type": "string",
      "maxLength": 100,
      "$comment": "Reference to User ID",
      "reference": {
        "schema": "user"
      }
    },
    "createdDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "createdBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "lastUpdatedBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "required": [
    "user",
    "title",
    "type",
    "date",
    "time",
    "amount"
  ],
  "index": [
    {
      "field": "user",
      "unique": false
    }
  ]
}