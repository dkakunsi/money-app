{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user",
  "title": "User",
  "description": "Individual or organisation that use the app",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 36
        }
      ]
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 100
    },
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "phone": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "PERSONAL",
        "ORGANISATION"
      ]
    },
    "photoUrl": {
      "type": "string"
    },
    "isDeleted": {
      "type": "boolean"
    },
    "language": {
      "type": "string",
      "enum": [
        "EN",
        "ID"
      ]
    },
    "createdDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "createdBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "lastUpdatedBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "required": [
    "email",
    "name",
    "type"
  ],
  "index": [
    {
      "field": "email",
      "unique": true
    },
    {
      "field": "phone",
      "unique": true
    }
  ]
}