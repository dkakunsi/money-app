{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "transaction",
  "title": "Money Transaction",
  "description": "Transaction is a record of money movement between accounts",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 36
        }
      ]
    },
    "user": {
      "type": "string",
      "maxLength": 100,
      "$comment": "Reference to User ID",
      "reference": {
        "schema": "user"
      }
    },
    "title": {
      "type": "string",
      "maxLength": 100
    },
    "description": {
      "type": "string"
    },
    "date": {
      "type": "number"
    },
    "time": {
      "type": "integer"
    },
    "type": {
      "type": "string",
      "enum": [
        "CREDIT",
        "DEBIT",
        "TRANSFER"
      ]
    },
    "source": {
      "type": "string",
      "$comment": "Reference to Account ID",
      "reference": {
        "schema": "account"
      }
    },
    "destination": {
      "type": "string",
      "$comment": "Reference to Account ID",
      "reference": {
        "schema": "account"
      }
    },
    "loan": {
      "type": "string",
      "$comment": "Reference to Loan ID",
      "reference": {
        "schema": "loan"
      }
    },
    "amount": {
      "type": "number"
    },
    "isDeleted": {
      "type": "boolean"
    },
    "createdDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "createdBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "lastUpdatedBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "required": [
    "user",
    "title",
    "type",
    "amount",
    "date",
    "time"
  ],
  "index": [
    {
      "field": "user",
      "unique": false
    }
  ]
}